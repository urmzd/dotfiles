# Personal Git configuration
# This file is included conditionally for personal projects (e.g., dotfiles repo)
# Managed by Chezmoi

[user]
    name = {{ .name | quote }}
    email = {{ .personal_email | quote }}
{{- if .gpg_signing_key }}
    signingkey = {{ .gpg_signing_key | quote }}
{{- else if .ssh_signing_key }}
    # Note: SSH signing is allowed but GPG signing is recommended
    signingkey = {{ .ssh_signing_key | quote }}
{{- end }}
